{
  "name": "knex-migration-with-schema",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "mocha --require ts-node/register --recursive ./src/**/*.test.ts",
    "test-watch": "npm test -- -b --watch --watch-files src",
    "install": "docker-compose -f docker-compose.dev.yml run --rm dev npm i",
    "dtw": "docker-compose -f docker-compose.test.yml run --rm test",
    "dsa": "docker stop $(docker ps -q) || true && docker rm $(docker ps -aq) || true",
    "build": "tsc"
  },
  "author": "William Grisa",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^14.0.14",
    "knex": "^0.21.1",
    "pg": "^8.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/knex": "^0.16.1",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^8.0.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  }
}
